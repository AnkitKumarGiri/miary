<%- include('header'); %>

<div class="container jumbotron">
        <div class="row align-items-center">
                <div class="col-12 col-md-6 intro-div">
                        <!-- <img src="logo.jpg" class="logo"> -->
                        <h1 class="mb-3 mt-2">Miary</h1>
                        <h3>Your Personal e-Diary</h3>
                        <p>Diaries help us to organize our thoughts and make them apprehensible by recording daily
                                events, thoughts and feelings about certain experiences or opinions. Miary makes diary
                                writing an effortless
                                and enjoyable experience
                        </p>
                        <p class="mt-5 mb-3 text-muted copyright1">&copy; Souradip Nath 2020</p>
                </div>
                <div class="col-12 col-md-6 login-div">
                        <form class="form-signin" action="/" method="POST">
                                <h1 class="h3 mb-3 mt-2 font-weight-normal">Welcome</h1>
                                <p class="mt-2 mb-2 login-status text-muted" id="message"><%- loginStatus %>
                                </p>
                                <div class="form-group">
                                        <input type="email" name="username" class="form-control "
                                                placeholder="Registered  Email ID" required autofocus>
                                </div>
                                <div class="form-group">
                                        <input type="password" name="password" class="form-control "
                                                placeholder="Password" required>
                                </div>
                                <button class="btn btn-outline-light btn-block" type="submit">Login</button>
                                <p class="mt-5 mb-3 ">Need an Account? <a href="/signup">Sign Up Here</a></p>
                                <p class="mt-5 mb-3 text-muted copyright2">&copy; Souradip Nath 2020</p>
                </div>
        </div>
</div>
 
<%- include('footer'); %>