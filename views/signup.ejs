<%- include('header'); %>

<div class="container jumbotron">
        <div class="row align-items-center">
                <div class="col-12 col-md-6 intro-div">
                        <!-- <img src="logo.jpg" class="logo"> -->
                        <h1 class="mb-3 mt-2">Miary</h1>
                        <h3>Your Personal e-Diary</h3>
                        <p>Diaries help us to organize our thoughts and make them apprehensible by recording daily
                                events, thoughts and feelings about certain experiences or opinions. Miary makes diary
                                writing an effortless
                                and enjoyable experience
                        </p>
                        <p class="mt-5 mb-3 text-muted copyright1">&copy; Souradip Nath 2020</p>
                </div>
                <div class="col-12 col-md-6 login-div">
                        <form class="form-signin" action="/signup" method="POST">
                                <h1 class="h3 mb-3 mt-2 font-weight-normal">Sign Up Here</h1>
                                <p class="mt-2 mb-2 signup-status text-muted" id="message">
                                        <%- signupStatus %> </p>
                                <div class="form-group">
                                        <input type="text" name="fname" class="form-control " placeholder="First Name"
                                                required autofocus>
                                </div>
                                <div class="form-group">
                                        <input type="text" name="lname" class="form-control " placeholder="Last Name"
                                                required autofocus>
                                </div>
                                <div class="form-group">
                                        <input type="email" name="username" class="form-control " placeholder="Email ID"
                                                required autofocus>
                                </div>
                                <div class="form-group">
                                        <input type="password" name="password" class="form-control "
                                                placeholder="Password" required>
                                </div>
                                <button class="btn btn-outline-light btn-block" type="submit">Sign Up</button>
                                <p class="mt-5 mb-3">Already Have an Account? <a href="/">Login Here</a></p>
                                <p class="mt-5 mb-3 text-muted copyright2">&copy; Souradip Nath 2020</p>
                </div>
        </div>
</div>
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

<%- include('footer'); %>